program=$(basename $0)
json="$1"

log() {
  # echo $* >> "$logfile"
  echo $*
}

err() {
  log "${program}: $*"
}

if [ ! -e "$json" ]; then
    err "input file not found: $json"
    exit 1
fi

(printf "%08x" $(wc -c $json | awk '{print $1}'); cat $json) > $json.cyto

nc localhost 34170 < $json.cyto
