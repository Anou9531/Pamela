(defpclass whenever-always []
  :meta {:version "0.2.0"
         :doc "whenever example with no time bounds"}
  :fields {:a (lvar)}
  :methods [(defpmethod always-on
              {:doc "ensure field :a is always 1.0"}
              []
              (whenever (condition (field= :a 1.0))
                (noop)))])
