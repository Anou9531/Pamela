program=$(basename $0)
dir=$(dirname $0)
cd "$dir/.."
dir="$(pwd -P)"
analysis="$dir/target/analysis"
regression="$dir/../src/test/pamela/regression"

if [ ! -d "$analysis" ]; then
    echo "Analyzing PAMELA regression files..."
    lein run
fi

cd "$analysis"
suf=".txt"
html="index.html"
echo "<html>" > $html
echo "<body>" >> $html

for f in *.txt; do
    test=${f%$suf}
    echo "<h1>$test</h1>" >> $html
    # ls -l "$regression/$test.pamela"
    echo "<pre>" >> $html
    cat "$regression/$test.pamela" >> $html
    echo "</pre>" >> $html
    echo "<br/><pre>" >> $html
    cat "$test.txt" >> $html
    echo "</pre>" >> $html
    echo "<img src=\"$test.png\">" >> $html
    echo "<hr/>" >> $html
done

echo "</body>" >> $html
echo "</html>" >> $html

echo " "
echo "view the regression files with..."
echo "open $analysis/$html"
