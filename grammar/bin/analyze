program=$(basename $0)
dir=$(dirname $0)
export PAMELA_CWD="$(pwd -P)"
cd "$dir/.."
dir="$(pwd -P)"
analysis="$dir/target/analysis"
regression="$dir/../src/test/pamela/regression"

log() {
  echo >&2 "$*"
}

err() {
  log "${program}: $*"
}

file="$1"
args=""
if [ -n "$file" ]; then
    if [ ! -e "$file" ]; then
        if [ -e "$PAMELA_CWD/$file" ]; then
            file="$PAMELA_CWD/$file"
        else
            err "input file does not exist: $file"
            exit 1
        fi
    fi
    args="-- $file"
fi

parsetree=""
if [ -n "$file" ]; then
    echo "Analyzing PAMELA file: $file"
    parsetree="${file%%.pamela}.txt"
else
    echo "Analyzing PAMELA regression files..."
fi
lein run $args

if [ -n "$parsetree" ]; then
    if [ -e "$parsetree" ]; then
        exit 0
    else
        exit 1
    fi
else
    if [ ! -d "$analysis" ]; then
        exit 1
    fi
fi

cd "$analysis"
suf=".txt"
html="index.html"
echo "<html>" > $html
echo "<body>" >> $html

for f in *.txt; do
    test=${f%$suf}
    echo "<h1>$test</h1>" >> $html
    # ls -l "$regression/$test.pamela"
    echo "<pre>" >> $html
    cat "$regression/$test.pamela" >> $html
    echo "</pre>" >> $html
    echo "<br/><pre>" >> $html
    cat "$test.txt" >> $html
    echo "</pre>" >> $html
    echo "<img alt=\"FAILED!\" src=\"$test.png\">" >> $html
    echo "<hr/>" >> $html
done

echo "</body>" >> $html
echo "</html>" >> $html

echo " "
echo "view the regression files with..."
echo "open $analysis/$html"
